{
  "name": "react-typescript-boilerplate",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.1",
    "styled-components": "^4.3.2",
    "tailwindcss": "^1.0.5"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "build:analyze": "react-app-rewired build && webpack-bundle-analyzer --port 4200 build/stats.json",
    "test": "react-app-rewired test",
    "test:ci": "react-app-rewired test test --env=jsdom --coverage --watchAll=false --maxWorkers=2",
    "test:coverage": "react-app-rewired test --coverage --watchAll=false",
    "serve": "serve -s build",
    "prettify": "prettier -c --write \"*/**\""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.2.0",
    "@hot-loader/react-dom": "^16.8.6",
    "@testing-library/react": "^8.0.5",
    "@types/jest": "24.0.15",
    "@types/node": "12.6.2",
    "@types/react": "16.8.23",
    "@types/react-dom": "16.8.4",
    "@types/styled-components": "^4.1.18",
    "babel-plugin-macros": "^2.6.1",
    "babel-plugin-styled-components": "^1.10.6",
    "babel-plugin-tailwind-components": "^0.5.10",
    "customize-cra": "^0.2.14",
    "husky": "^3.0.0",
    "jest-styled-components": "^6.3.3",
    "lint-staged": "^9.2.0",
    "prettier": "^1.18.2",
    "react-app-rewire-hot-loader": "^2.0.1",
    "react-app-rewired": "^2.1.3",
    "react-hot-loader": "^4.12.6",
    "tailwind.macro": "^1.0.0-alpha.10",
    "typescript": "3.5.3",
    "webpack-bundle-analyzer": "^3.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
